Format 35

Preamble

\newcommand{\ChapterSpecial}[1]
{
		\chapter*{#1}
		\addcontentsline{toc}{chapter}{#1}  
		\markboth{#1}{#1}
}

EndPreamble


Input stdclass.inc
Input numreport.inc

Requires amsmath,amsthm

Sides           2
PageStyle       Headings

Style Standard
ParSkip               0.4
ParSep                0.4
Spacing               onehalf
End

Style Cover
Margin                Dynamic
Category              Part
LabelString           "封面"
LabelType             Counter
LabelCounter          part
TocLevel              0
LatexType             Paragraph
LatexName             dummy
KeepEmpty             1
NeedProtect           1
NextNoIndent          1
Labelsep              xxx
ParSkip               0.4
TopSep                4
BottomSep             4
ParSep                0.8
Align                 Center
Alignpossible         Center
Font
  Series              Bold
  Size                Huge
  Color               Blue
EndFont
HTMLTag               h1
End

Style FrontMatter
CopyStyle             Cover
LatexType             Command
LabelString           "扉页"
LatexName             makecover
End


Style MainMatter
CopyStyle             FrontMatter
LabelString           "正文"
LatexName             thesischapterexordium
End

Style BackMatter
CopyStyle             FrontMatter
LabelString           "底页"
LatexName             backmatter
End

##############################

Style Abstract
Margin                Static
LatexType             Environment
LatexName             chineseabstract
Category              FrontMatter
NextNoIndent          1
LeftMargin            MMM
RightMargin           MMM
ParIndent             MM
ItemSep               0
TopSep                0.7
BottomSep             0.7
ParSep                0
Align                 Block
LabelType             Centered_Top_Environment
LabelString           "Abstract"
LabelBottomSep        0.5
Font
Size                Small
EndFont
LabelFont
Series              Bold
Size                Large
EndFont
HTMLLabelFirst        1
HTMLForceCSS          1
HTMLStyle
div.abstract {
margin: 4ex;
}
div.abstract_item {
		font-size: small;
		padding-top: 1ex;
}
div.abstract_label {
		font-weight: bold;
}
EndHTMLStyle
End

Style EnglishAbstract
CopyStyle 		Abstract 
LatexName             englishabstract
LabelString           "　Abstract"
End

#####################################
Style ChapterSpecial
CopyStyle 			Chapter*
Align	        	Center
LatexName           ChapterSpecial
End

Style Denotation
    CopyStyle 		Description
    LatexName 		denotation
    HTMLTag               ddl
	HTMLAttr              class='denotation'
	HTMLItem              dd
	HTMLLabel             dt
	HTMLLabelFirst        1
	HTMLStyle
		ddl.denotation dt { font-weight: bold; }
	EndHTMLStyle
End

#####################################


OutlinerName thm "Definitions & Theorems"

Counter theorem
	Within                chapter
End

Style Theorem
	Category              Reasoning
	Margin                First_Dynamic
	LatexType             Environment
	LatexName             theorem
	NextNoIndent          1
	ResetArgs             1
	AddToToc              thm
	IsTocCaption          1
	Argument 1
		LabelString    "Additional Theorem Text"
		Tooltip        "Additional text appended to the theorem header"
		IsTocCaption      1
	EndArgument
	LabelSep              xx
	ParIndent             MMM
	ParSkip               0.4
	ItemSep               0.2
	TopSep                0.7
	BottomSep             0.7
	ParSep                0.3
	Align                 Block
	AlignPossible         Left
	LabelType             Static
	LabelCounter          theorem
	LabelString           "Theorem \thetheorem."
	Font
	  Shape               Italic
	  Size                Normal
	EndFont
	LabelFont
	  Shape               SmallCaps
	EndFont
End

Style Axiom
	CopyStyle             Theorem
	DependsOn             Theorem
	LatexName             axiom
	LabelString           "Axiom \thetheorem."
End

Style Corollary
	CopyStyle             Theorem
	DependsOn             Theorem
	LatexName             corollary
	LabelString           "Corollary \thetheorem."
End

Style Lemma
	CopyStyle             Theorem
	DependsOn             Theorem
	LatexName             lemma
	LabelString           "Lemma \thetheorem."
End

Style Proposition
	CopyStyle             Theorem
	DependsOn             Theorem
	LatexName             proposition
	LabelString           "Proposition \thetheorem."
End

Style Definition
	CopyStyle             Theorem
	DependsOn             Theorem
	LatexName             definition
	LabelString           "Definition \thetheorem."
	Font
	  Shape               Up
	EndFont
	LabelFont
	  Shape  Italic
	  Series  Medium
	EndFont
End

Style Example
	CopyStyle             Definition
	LatexName             example
	LabelString           "Example \thetheorem."
End

Input theorems-proof.inc

#####################################

# Custom Inset Layout
InsetLayout Keywords
LyXType         custom
# LyXType         element
LabelString 	关键词
LatexType       Command
LatexName       chinesekeyword
Decoration 	   Classic
Font
    Size	Normal
    Shape   Up
EndFont
LabelFont
    Color	blue
    Size	Normal
EndFont
End

# Custom Inset Layout
InsetLayout eKeywords
LyXType         custom
# LyXType         element
LabelString 	Keywords
LatexType       Command
LatexName       englishkeyword
Decoration 	   Classic
Font
    Size	Normal
    Shape   Up
EndFont
LabelFont
    Color	blue
    Size	Normal
EndFont
End

#####################################

# delete style
NoStyle Part
NoStyle Part*
NoStyle Bibliography
NoStyle Author
NoStyle Title
NoStyle Date
NoStyle Address
NoStyle Right_Address
NoStyle Cover
NoStyle Denotation